{% if widgetImage.image != '' %}
<div>
    <div style="float: left;">
        <span class="title">{{ widgetImage.title }}</span>
        <br />
        {{ widgetImage.subtitle }}
    </div>
</div> 
<div class="content">
    <img src="{{ widgetImage.image }}" style="max-height:250px" />
</div>
{% endif %}